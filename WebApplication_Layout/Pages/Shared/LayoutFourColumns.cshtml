<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .column-bg {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row g-4">
            <div class="col-md-3 column-bg">
                @RenderSection("Column1", required: true)
            </div>
            
            <div class="col-md-3 column-bg">
                @RenderSection("Column2", required: true)
            </div>
            
            <div class="col-md-3 column-bg">
                @RenderSection("Column3", required: true)
            </div>
            
            <div class="col-md-3 column-bg">
                @RenderSection("Column4", required: true)
            </div>
        </div>
    </div>
</body>
</html>