<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .column-border {
            border-right: 1px solid #dee2e6;
            min-height: 80vh;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Левый столбец -->
            <div class="col-md-4 column-border">
                @RenderSection("LeftColumn", required: true)
            </div>
            
            <!-- Центральный столбец -->
            <div class="col-md-4 column-border">
                @RenderSection("CenterColumn", required: true)
            </div>
            
            <!-- Правый столбец -->
            <div class="col-md-4">
                @RenderSection("RightColumn", required: true)
            </div>
        </div>
    </div>
</body>
</html>