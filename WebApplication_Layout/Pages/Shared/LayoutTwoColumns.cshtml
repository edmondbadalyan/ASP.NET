<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Левый столбец -->
            <div class="col-md-6">
                @RenderSection("LeftColumn", required: true)
            </div>

            <!-- Правый столбец -->
            <div class="col-md-6">
                @RenderSection("RightColumn", required: true)
            </div>
        </div>
    </div>
</body>
</html>