@model WebApplication7.Models.Game

@{
    ViewData["Title"] = "Добавить новую игру";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Studio" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Studio" class="form-control" />
            <span asp-validation-for="Studio" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ReleaseDate" class="form-control" type="date" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="SoldCopies" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="SoldCopies" class="form-control" />
            <span asp-validation-for="SoldCopies" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="GameMode" class="control-label col-md-2"></label>
        <div class="col-md-10">
            
            <select asp-for="GameMode" asp-items="Html.GetEnumSelectList<WebApplication7.Models.GameMode>()" class="form-control"></select>
            <span asp-validation-for="GameMode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить игру" class="btn btn-primary" />
        </div>
    </div>
</form>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div>
    <a asp-action="Index">Назад к списку игр</a>
</div>
