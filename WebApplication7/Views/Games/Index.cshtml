@model IEnumerable<WebApplication7.Models.Game>

@{
    ViewData["Title"] = "Список игр";
}

<h2>@ViewData["Title"]</h2>

<!-- Ссылка на создание новой игры -->
<div class="mb-3">
    <a asp-controller="Games" asp-action="Create" class="btn btn-success">Добавить новую игру</a>
</div>

<!-- Если коллекция пуста, показываем сообщение, иначе таблицу -->
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Нет игр для отображения.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Название игры</th>
                <th>Студия</th>
                <th>Стиль игры</th>
                <th>Дата релиза</th>
                <th>Продажи</th>
                <th>Режим игры</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.Title</td>
                    <td>@game.Studio</td>
                    <td>@game.Genre</td>
                    <td>@game.ReleaseDate.ToShortDateString()</td>
                    <td>@game.SoldCopies</td>
                    <td>@game.GameMode</td>
                    <td>
                        <!-- Ссылки для редактирования и удаления -->
                        @if (game.CreatedBy == User.Identity.Name)
                        {
                            <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-warning btn-sm">Редактировать</a>
                        }
                        <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger btn-sm">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
