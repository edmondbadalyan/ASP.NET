@page
@model IndexModel
@{
    ViewData["Title"] = "Поиск цифры в последовательности";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Sequence">Введите последовательность цифр:</label>
        <input asp-for="Sequence" class="form-control" placeholder="Пример: 123456789" />
        <span asp-validation-for="Sequence" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Position">Введите позицию цифры:</label>
        <input asp-for="Position" class="form-control" type="number" min="1" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Найти</button>
</form>

@if (!string.IsNullOrEmpty(Model.Result))
{
    <div class="alert alert-success mt-3">
        @Model.Result
    </div>
}

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger mt-3">
        @Model.Error
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
