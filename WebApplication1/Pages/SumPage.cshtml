@page
@model WebApplication1.Pages.SumPageModel
@{
    ViewData["Title"] = "Сумма степеней";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="N">Введите N:</label>
        <input asp-for="N" class="form-control" />
        <span asp-validation-for="N" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="K">Введите степень k:</label>
        <input asp-for="K" class="form-control" />
        <span asp-validation-for="K" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Вычислить</button>
</form>

@if (Model.Result > 0)
{
    <div class="mt-3">
        <h4>Результат: @Model.Result</h4>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">
        @Model.ErrorMessage
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}