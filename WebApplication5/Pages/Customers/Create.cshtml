@page
@model WebApplication5.Pages.Customers.CreateModel
<h1>Create New Customer</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Customer.FullName"></label>
        <input asp-for="Customer.FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Customer.Email"></label>
        <input asp-for="Customer.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Categories</label>
        <select asp-for="SelectedCategories"
                asp-items="Model.Categories"
                class="form-control"
                multiple>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
